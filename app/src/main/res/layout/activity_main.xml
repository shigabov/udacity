<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btn_spotify"
        android:background="#fff08c35"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:onClick="justText" />



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btn_scores"
        android:background="#fff08c35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_spotify"
        android:layout_centerHorizontal="true"
        android:onClick="justText" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btn_library"
        android:background="#fff08c35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_scores"
        android:layout_centerHorizontal="true"
        android:onClick="justText" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_bib"
        android:background="#fff08c35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_library"
        android:layout_centerHorizontal="true"
        android:onClick="justText" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btn_xyz"
        android:background="#fff08c35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_bib"
        android:layout_centerHorizontal="true"
        android:onClick="justText" />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btn_capstone"
        android:background="#fff00041"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_xyz"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:onClick="justText" />


</RelativeLayout>
